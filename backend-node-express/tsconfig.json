{
 "ts-node": {
    "compilerOptions": {
      "module": "commonjs",
      "types": ["node"]
    },
    "transpileOnly": false,
    "files": true
  },

  "compilerOptions": {
    "target": "es2024",
    "module": "commonjs",
    "lib": ["ES2024"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]

  },
  "include": ["server.ts", "app.ts", "src/**/*", "prisma/**/*"],
  "exclude": ["node_modules", "dist", "tests"]
}
